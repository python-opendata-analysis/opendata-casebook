{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Open Data Casebook metadata schema",
  "type": "object",
  "required": ["title", "author", "date", "domain", "slug", "data_sources", "code_license", "language"],
  "properties": {
    "title": { "type": "string", "minLength": 1 },
    "author": { "type": "string", "minLength": 1 },
    "date": { "type": "string", "pattern": "^\\d{8}$" },
    "domain": { "type": "string", "minLength": 1 },
    "slug": { "type": "string", "minLength": 1 },
    "data_sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "provider", "url", "terms_of_use"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "provider": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "minLength": 1 },
          "terms_of_use": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": true
      }
    },
    "code_license": { "type": "string", "minLength": 1 },
    "notebook_license": { "type": "string" },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "url"],
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "url": { "type": "string", "minLength": 1 }
        },
        "additionalProperties": true
      }
    },
    "language": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
